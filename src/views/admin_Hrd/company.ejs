<%- include('partials/header') %>

<div id="wrapper">
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('partials/navbar') %>

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="container-fluid">

            <!-- Alerts -->
            <% if (message) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <!-- ======================================================= -->
            <!-- COMPANY -->
            <!-- ======================================================= -->
            <div class="card shadow-sm mb-5 border-0">
              <div class="card-body bg-white">
                <div class="row align-items-start mb-3 g-3">
                  <div class="col-lg-6 col-md-12">
                    <h3 class="mb-2">
                      <i class="bi bi-building me-2"></i> Data Perusahaan
                    </h3>
                    <p>Daftar perusahaan yang terdaftar dalam sistem</p>
                    <hr>
                  </div>
                  <div class="col-lg-6 d-flex justify-content-end align-items-center">
                    <button class="btn btn-primary rounded-pill px-4"
                            data-bs-toggle="modal"
                            data-bs-target="#modalTambahCompany" style="background-color: #0d6efd;">
                      <i class="bi bi-plus-circle me-2"></i> Tambah Perusahaan
                    </button>
                  </div>
                </div>

                <div class="table-responsive">
                  <table class="table table-hover align-middle text-center" id="tableCompany">
                    <thead class="table-light">
                      <tr>
                        <th>No</th>
                        <th class="text-start">Nama Perusahaan</th>
                        <th>NPWP</th>
                        <th>Status</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (!dataCompany || dataCompany.length === 0) { %>
                        <tr>
                          <td colspan="5" class="text-muted">Belum ada data perusahaan</td>
                        </tr>
                      <% } else { %>
                        <% dataCompany.forEach((d, i) => { %>
                          <tr>
                            <td style="width:60px"><%= i + 1 %></td>
                            <td class="text-start"><%= d.nama_company %></td>
                            <td><%= d.npwp %></td>
                            <td style="width:140px">
                              <span class="badge <%= d.active ? 'bg-dark' : 'bg-danger' %> rounded-pill px-3 py-2">
                                <%= d.active ? 'Aktif' : 'Nonaktif' %>
                              </span>
                            </td>
                            <td style="width:240px">
                              <div class="d-flex justify-content-center gap-2">
                                <button class="btn btn-sm btn-primary px-3 text-white"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalDetailCompany<%= d.id_company %>" style="background-color: #0d6efd;">
                                  <i class="bi bi-eye me-1"></i> Detail
                                </button>

                                <button class="btn btn-sm btn-warning text-white px-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalEditCompany<%= d.id_company %>">
                                  <i class="bi bi-pencil-square me-1"></i> Edit
                                </button>

                                <button class="btn btn-sm btn-outline-danger px-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalHapusCompany<%= d.id_company %>">
                                  <i class="bi bi-trash me-1"></i> Hapus
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <!-- ==================== MODALS COMPANY START ==================== -->
            <% if (dataCompany && dataCompany.length > 0) { %>
              <% dataCompany.forEach(d => { %>

                <!-- Modal Detail Company -->
                <div class="modal fade" id="modalDetailCompany<%= d.id_company %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                      <!-- header dark like data_karyawan -->
                      <div class="modal-header border-0" style="background-color:  #3c3c51">
                        <h5 class="modal-title text-white">
                          <i class="bi bi-eye me-2"></i> Detail Perusahaan
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                      </div>

                      <div class="modal-body p-4 bg-light">
                        <dl class="row mb-0">
                          <dt class="col-sm-4">ID</dt><dd class="col-sm-8"><%= d.id_company %></dd>
                          <dt class="col-sm-4">Nama</dt><dd class="col-sm-8"><%= d.nama_company %></dd>
                          <dt class="col-sm-4">NPWP</dt><dd class="col-sm-8"><%= d.npwp %></dd>
                          <dt class="col-sm-4">Status</dt>
                          <dd class="col-sm-8">
                            <span class="badge <%= d.active ? 'bg-dark' : 'bg-danger' %> px-3 py-2 rounded-pill">
                              <%= d.active ? 'Aktif' : 'Nonaktif' %>
                            </span>
                          </dd>
                        </dl>
                      </div>

                      <div class="modal-footer bg-white">
                        <button class="btn btn-outline-dark rounded-pill px-4 text-white" data-bs-dismiss="modal" style="background-color:  #3c3c51">Tutup</button>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- ===================== MODALS COMPANY END ====================== -->

                <!-- ================== MODALS COMPANY EDIT START ================== -->
                <div class="modal fade" id="modalEditCompany<%= d.id_company %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                      <form method="POST" action="/admin_Hrd/company/edit/<%= d.id_company %>">
                        <div class="modal-header border-0" style="background-color:  #3c3c51">
                          <h5 class="modal-title text-white">
                            <i class="bi bi-pencil-square me-2"></i> Edit Perusahaan
                          </h5>
                          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>

                        <div class="modal-body px-4 py-3" style="background-color: #2b2b35; color: #fff;">
                          <div class="row g-3">
                            <div class="col-md-6">
                              <label class="form-label fw-semibold text-white">Nama Perusahaan</label>
                              <div class="input-group">
                                <span class="input-group-text bg-dark text-white border-0">
                                  <i class="bi bi-building"></i>
                                </span>
                                <input type="text" name="nama_company" class="form-control bg-dark text-white border-0" required value="<%= d.nama_company %>">
                              </div>
                            </div>

                            <div class="col-md-6">
                              <label class="form-label fw-semibold text-white">NPWP</label>
                              <div class="input-group">
                                <span class="input-group-text bg-dark text-white border-0">
                                  <i class="bi bi-receipt"></i>
                                </span>
                                <input type="text" name="npwp" class="form-control bg-dark text-white border-0" required value="<%= d.npwp %>">
                              </div>
                            </div>

                            <div class="col-md-6">
                              <label class="form-label fw-semibold text-white">Status</label>
                              <div class="input-group">
                                <span class="input-group-text bg-dark text-white border-0">
                                  <i class="bi bi-toggle-on"></i>
                                </span>
                                <select name="active" class="form-select bg-dark text-white border-0" required>
                                  <option value="true" <%= d.active ? 'selected' : '' %>>Aktif</option>
                                  <option value="false" <%= !d.active ? 'selected' : '' %>>Nonaktif</option>
                                </select>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="modal-footer border-0" style="background-color: #2b2b35;">
                          <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                          <button type="submit" class="btn btn-primary rounded-pill px-4">Simpan Perubahan</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- ===================== MODALS COMPANY EDIT END ==================== -->

                <!-- =================== MODALS COMPANY HAPUS START =================== -->
                <div class="modal fade" id="modalHapusCompany<%= d.id_company %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden text-center p-4" style="background-color: #2b2b35; color: #fff;">
                      <i class="bi bi-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                      <p class="mt-3 fs-5">Yakin ingin menghapus <b><%= d.nama_company %></b>?</p>
                      <div class="d-flex justify-content-center gap-2 mt-4">
                        <button class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                        <form method="POST" action="/admin_Hrd/company/delete/<%= d.id_company %>">
                          <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="bi bi-trash me-2"></i> Hapus
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- =================== MODALS COMPANY HAPUS END =================== -->

              <% }) %>
            <% } %>

            <!-- =================== MODALS COMPANY TAMBAH START =================== -->
            <div class="modal fade" id="modalTambahCompany" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                  <form method="POST" action="/admin_Hrd/company/add">
                    <div class="modal-header border-0" style="background-color:  #3c3c51">
                      <h5 class="modal-title text-white">
                        <i class="bi bi-building-add me-2"></i> Tambah Perusahaan
                      </h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body px-4 py-3" style="background-color: #2b2b35; color: #fff;">
                      <div class="row g-3">
                        <div class="col-md-6">
                          <label class="form-label fw-semibold text-white">Nama Perusahaan</label>
                          <div class="input-group">
                            <span class="input-group-text bg-dark text-white border-0">
                              <i class="bi bi-building"></i>
                            </span>
                            <input type="text" name="nama_company" class="form-control bg-dark text-white border-0" placeholder="Masukkan nama perusahaan" required>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <label class="form-label fw-semibold text-white">NPWP</label>
                          <div class="input-group">
                            <span class="input-group-text bg-dark text-white border-0">
                              <i class="bi bi-receipt"></i>
                            </span>
                            <input type="text" name="npwp" class="form-control bg-dark text-white border-0" placeholder="Masukkan nomor NPWP" required>
                          </div>
                        </div>

                        <div class="col-md-6">
                          <label class="form-label fw-semibold text-white">Status</label>
                          <div class="input-group">
                            <span class="input-group-text bg-dark text-white border-0">
                              <i class="bi bi-toggle-on"></i>
                            </span>
                            <select name="active" class="form-select bg-dark text-white border-0" required>
                              <option value="true">Aktif</option>
                              <option value="false">Nonaktif</option>
                            </select>
                          </div>
                        </div>

                      </div>
                    </div>

                    <div class="modal-footer border-0" style="background-color: #2b2b35;">
                      <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                      <button type="submit" class="btn btn-primary rounded-pill px-4">Simpan</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- =================== MODALS COMPANY TAMBAH END =================== -->

            <!-- ======================================================= -->
            <!-- DEPARTEMEN -->
            <!-- ======================================================= -->
            <div class="card shadow-sm mb-4 border-0">
              <div class="card-body bg-white">
                <div class="row align-items-start mb-3 g-3">
                  <div class="col-lg-6 col-md-12">
                    <h3 class="mb-2">
                      <i class="bi bi-diagram-3 me-2"></i> Data Departemen
                    </h3>
                    <p>Daftar departemen yang terdaftar dalam sistem</p>
                    <hr>
                  </div>
                  <div class="col-lg-6 d-flex justify-content-end align-items-center">
                    <button class="btn btn-primary rounded-pill px-4"
                            data-bs-toggle="modal"
                            data-bs-target="#modalTambahDept" style="background-color: #0d6efd;">
                      <i class="bi bi-plus-circle me-2"></i> Tambah Departemen
                    </button>
                  </div>
                </div>

                <div class="table-responsive">
                  <table class="table table-hover align-middle text-center" id="tableDept">
                    <thead class="table-light">
                      <tr>
                        <th>No</th>
                        <th class="text-start">Nama Departemen</th>
                        <th>Keterangan</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (!dataDept  || dataDept.length === 0) { %>
                        <tr>
                          <td colspan="4" class="text-muted">Belum ada data departemen</td>
                        </tr>
                      <% } else { %>
                        <% dataDept.forEach((d, i) => { %>
                          <tr>
                            <td style="width:60px"><%= i + 1 %></td>
                            <td class="text-start"><%= d.nama_department %></td>
                            <td><%= d.ket %></td>
                            <td style="width:240px">
                              <div class="d-flex justify-content-center gap-2">
                                <button class="btn btn-sm btn-primary" 
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalDetailDept<%= d.id_department %>" px-3 text-white style="background-color: #0d6efd;">
                                  <i class="bi bi-eye me-1"></i> Detail
                                </button>

                                <button class="btn btn-sm btn-warning text-white px-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalEditDept<%= d.id_department %>">
                                  <i class="bi bi-pencil-square me-1"></i> Edit
                                </button>

                                <button class="btn btn-sm btn-outline-danger px-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalHapusDept<%= d.id_department %>">
                                  <i class="bi bi-trash me-1"></i> Hapus
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <!-- ================== MODALS DEPARTMENT START ================== -->
            <% if (dataDept && dataDept.length > 0) { %>
              <% dataDept.forEach(d => { %>

                <!-- Modal Detail Dept -->
                <div class="modal fade" id="modalDetailDept<%= d.id_department %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                      <div class="modal-header border-0" style="background-color:  #3c3c51">
                        <h5 class="modal-title text-white"><i class="bi bi-eye me-2"></i> Detail Departemen</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body p-4 bg-light">
                        <dl class="row mb-0">
                          <dt class="col-sm-4">ID</dt><dd class="col-sm-8"><%= d.id_department %></dd>
                          <dt class="col-sm-4">Nama</dt><dd class="col-sm-8"><%= d.nama_department %></dd>
                          <dt class="col-sm-4">Keterangan</dt><dd class="col-sm-8"><%= d.ket %></dd>
                        </dl>
                      </div>
                      <div class="modal-footer bg-white">
                        <button class="btn btn-outline-dark rounded-pill px-4 text-white" data-bs-dismiss="modal" style="background-color:  #3c3c51">Tutup</button>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- =================== MODALS DEPARTMENT EDIT START =================== -->
                <div class="modal fade" id="modalEditDept<%= d.id_department %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                      <form method="POST" action="/admin_Hrd/dept/edit/<%= d.id_department %>">
                        <div class="modal-header border-0" style="background-color:  #3c3c51">
                          <h5 class="modal-title text-white">
                            <i class="bi bi-pencil-square me-2"></i> Edit Departemen
                          </h5>
                          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body px-4 py-3" style="background-color: #2b2b35; color: #fff;">
                          <div class="row g-3">
                            <div class="col-md-6">
                              <label class="form-label fw-semibold text-white">Nama Departemen</label>
                              <div class="input-group">
                                <span class="input-group-text bg-dark text-white border-0"><i class="bi bi-building-gear"></i></span>
                                <input type="text" name="nama_department" class="form-control bg-dark text-white border-0" required value="<%= d.nama_department %>">
                              </div>
                            </div>

                            <div class="col-12">
                              <label class="form-label fw-semibold text-white">Keterangan</label>
                              <div class="input-group">
                                <span class="input-group-text bg-dark text-white border-0"><i class="bi bi-card-text"></i></span>
                                <textarea name="ket" class="form-control bg-dark text-white border-0" rows="3" required><%= d.ket %></textarea>
                              </div>
                            </div>

                          </div>
                        </div>
                        <div class="modal-footer border-0" style="background-color: #2b2b35;">
                          <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                          <button type="submit" class="btn btn-primary rounded-pill px-4">Simpan Perubahan</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- =================== MODALS DEPARTEMENT EDIT END =================== -->

                <!-- ================== MODALS DEPARTEMENT HAPUS START ================= -->
                <div class="modal fade" id="modalHapusDept<%= d.id_department %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden text-center p-4" style="background-color: #2b2b35; color: #fff;">
                      <i class="bi bi-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                      <p class="mt-3 fs-5">Yakin ingin menghapus <b><%= d.nama_department %></b>?</p>
                      <div class="d-flex justify-content-center gap-2 mt-4">
                        <button class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                        <form method="POST" action="/admin_Hrd/dept/delete/<%= d.id_department %>">
                          <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="bi bi-trash me-2"></i> Hapus
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                  <!-- ================== MODALS DEPARTEMENT HAPUS END ================= -->
                </div>

              <% }) %>
            <% } %>

            <!-- ================== MODALS DEPARTEMENT TAMBAH START ================= -->
            <div class="modal fade" id="modalTambahDept" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                  <form method="POST" action="/admin_Hrd/dept/add">
                    <div class="modal-header border-0" style="background-color:  #3c3c51">
                      <h5 class="modal-title text-white"><i class="bi bi-house-add me-2"></i> Tambah Departemen</h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body px-4 py-3" style="background-color: #2b2b35; color: #fff;">
                      <div class="row g-3">
                        <div class="col-md-6">
                          <label class="form-label fw-semibold text-white">Nama Departemen</label>
                          <div class="input-group">
                            <span class="input-group-text bg-dark text-white border-0"><i class="bi bi-building-gear"></i></span>
                            <input type="text" name="nama_department" class="form-control bg-dark text-white border-0" placeholder="Masukkan nama departemen" required>
                          </div>
                        </div>

                        <div class="col-12">
                          <label class="form-label fw-semibold text-white">Keterangan</label>
                          <div class="input-group">
                            <span class="input-group-text bg-dark text-white border-0"><i class="bi bi-card-text"></i></span>
                            <textarea name="ket" class="form-control bg-dark text-white border-0" rows="3" placeholder="Tuliskan keterangan departemen" required></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer border-0" style="background-color: #2b2b35;">
                      <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Batal</button>
                      <button type="submit" class="btn btn-primary rounded-pill px-4">Simpan</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- ================== MODALS DEPARTEMENT TAMBAH END ================= -->

          </div>
        </div>



<%- include('partials/footer') %>

<script>
  document.querySelectorAll('.modal').forEach(modalEl => {
    modalEl.addEventListener('shown.bs.modal', function () {
      const firstInput = modalEl.querySelector('input, select, textarea, button');
      if (firstInput) firstInput.focus();
    });
  });
</script>
